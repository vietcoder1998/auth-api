{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/src/*": ["./src/*"],
      "@prisma/*": ["../prisma/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "mysql-init"]
}
